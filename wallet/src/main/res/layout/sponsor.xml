<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
    android:orientation="horizontal"
    android:background="@color/sponsor_bg"
    android:paddingLeft="@dimen/row_padding_horizontal"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/row_padding_horizontal"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sponsor_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/half_standard_margin" />
    <LinearLayout
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:id="@+id/sponsor_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sponsored_by"/>

        <TextView
            android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/sponsor_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sponsor_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>
</LinearLayout>
